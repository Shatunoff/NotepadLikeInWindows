<Window x:Class="Notepad.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Notepad"
        mc:Ignorable="d"
        Title="AboutWindow" Height="400" Width="400" ShowInTaskbar="False" WindowStartupLocation="CenterOwner" WindowStyle="ToolWindow">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <Image Name="programLogo" Grid.Row="0" Source="pack://siteoforigin:,,,/Resources/Notepad_22553.png"/>
        <TextBlock Name="labelProductName" Grid.Row="1"/>
        <TextBlock Name="labelVersion" Grid.Row="2"/>
        <TextBlock Name="labelCopyright" Grid.Row="3"/>
        <TextBlock Name="labelCompanyName" Grid.Row="4"/>
        <TextBox Name="textBoxDescription" Grid.Row="5" TextWrapping="Wrap"/>
        <Button Name="btnOK" Grid.Row="6" Content="ОК" Width="100" Height="24" FontSize="12" HorizontalAlignment="Right" Margin="0,0,10,0" IsDefault="True" Click="btnOK_Click"/>
    </Grid>
</Window>
